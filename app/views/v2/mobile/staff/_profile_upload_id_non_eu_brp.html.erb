<div class="v2-profile-identification-uk" style='margin-top: 45px;'>Biometric Residency Permit</div>

<div class="web-hide">
  <div class="v2-mobile-upload-label">
    Front of Card
    <a class="v2-help" style= 'margin-left:7px; margin-top:18px' onclick="$('.non-eu-id-front-popup').show()">
      <i class="glyphicon glyphicon-question-sign"></i>
    </a>
  </div>
  <div class="v2-profile-identification-passport-inputs d-flex flex-row bd-highlight">
    <div class="v2-upload-file-button" id='v2-identification-upload-brp-front'>Upload File</div>
    <div class="v2-upload-file-content" id='v2-identification-upload-brp-front-content'>Front of Card</div>
  </div>
  <%= file_field_tag :brp_front, required: true, class: "form-control v2-profile-identification-passport-inputs", accept: @accepted_images, style: 'display: none;' %>
  <br>
  <div class="v2-mobile-upload-label">
    Back of Card
    <a class="v2-help" style= 'margin-left:14px; margin-top:18px' onclick="$('.non-eu-id-back-popup').show()">
      <i class="glyphicon glyphicon-question-sign"></i>
    </a>
  </div>
  <div class="v2-profile-identification-passport-inputs d-flex flex-row bd-highlight">
    <div class="v2-upload-file-button" id='v2-identification-upload-brp-back'>Upload File</div>
    <div class="v2-upload-file-content" id='v2-identification-upload-brp-back-content'>Back of Card</div>
  </div>
  <%= file_field_tag :brp_back, required: true, class: "form-control v2-profile-identification-passport-inputs", accept: @accepted_images, style: 'display: none;' %>
  <br>
  <div class="v2-mobile-upload-label">
    Permit #
    <a class="v2-help" style= 'margin-left:14px; margin-top:18px' onclick="$('.non-eu-id-number-popup').show()">
      <i class="glyphicon glyphicon-question-sign"></i>
    </a>
  </div>
  <%= text_field_tag :visa_no, nil, required: true, class: "form-control v2-profile-identification-passport-text-inputs v2-inputs", placeholder: 'Permit Number', autocomplete: "off" %>
  <br>
  <div class="v2-mobile-upload-label">
    Issue Date
  </div>
  <%= date_field_tag :visa_issue_date, @prospect.visa_issue_date, required: true, class: "form-control v2-profile-identification-passport-text-inputs v2-inputs" %>
  <br>
  <div class="v2-mobile-upload-label">
    Expiry Date
  </div>
  <%= date_field_tag :visa_expiry, @prospect.visa_expiry, required: true, class: "form-control v2-profile-identification-passport-text-inputs v2-inputs" %>
  <br>
  <div class="d-flex flex-row ">
    <div class='v2-application-checkbox'>
      <input id="visa-indefinite" name="visa_indefinite" type="checkbox" class='form-check-input v2-profile-identification-checkbox'>

      <label for="visa-indefinite" class='form-check-label v2-profile-identification-checkbox-label' style='margin-left: 0;'>Indefinite Leave to Remain</label>
    </div>

    <a class="v2-help" style= 'margin-left:14px; margin-top: 0' onclick="$('.non-eu-id-indefinite-popup').show()">
      <i class="glyphicon glyphicon-question-sign"></i>
    </a>
  </div>
</div>

<div class="non-eu-id-front-popup sample-popup v2-id-pic-pop-up" style="display:none">
  <div class="v2-id-pic-pop-up-body">
    <%= image_tag 'id-sample-non-eu-brp-front.jpg' %>
    <a class="fl-flash__close-btn" onclick="$('.v2-id-pic-pop-up').hide()">
      <span>Close</span>
    </a>
