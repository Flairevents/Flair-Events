<div class="public login">

  <%= render partial: 'v2/mobile/shared/nav' %>
  <div class="v2-login-background"></div>
  <div class="content">
    <div class="content-spacer"></div>
    <div class="content-inner">
      <div class="d-flex flex-row-reverse bd-highlight">
        <div class="col-10 m-auto p-0">
          <div class='v2-login-page'>

            <div class="v2-login-form" style="height: auto" id="v2-login-form">
              <div class="v2-login-form-title v2-login-form-title--forget-password">Create a new <br /> special<br /> password here:</div>
                <%= form_tag "#{Flair::Application.config.base_https_url}/staff/set_password", class: 'fl-login-form', autocomplete: "off" do %>

                <div class="form-group">
                  <% error_class = flash[:error].present? ? "v2-registration-error" : '' %>
                  <label class="error-messages"><%= flash[:error].present? ? flash[:error] : '' %></label>
                  <input aria-describedby="basic-addon5" class="form-control v2-registration-password v2-inputs" id="register_4" name="password" type="password" placeholder="Password*" autocomplete="off">
                </div>

                <div class="form-group d-flex flex-row bd-highlight" style="margin-bottom: 0;">
                  <input aria-describedby="basic-addon5" class="form-control v2-registration-password v2-inputs" id="register_5" name="password_confirm" type="password" placeholder="Confirm Password*" autocomplete="off">

                  <!--      <input aria-describedby="basic-addon2" class="form-control v2-login-password v2-inputs <%#= error_class %>" id="login_password" name="login_password" placeholder="Password" type="password" , autocomplete="off">-->
                  <i class="far fa-eye v2-togglePassword" style="margin-left: -25px;margin-top: 29px;" id="v2-togglePassword"></i>
                </div>

                <div class="mobile-hide">
                  <button class="v2-login-form-button" name="target" type="submit" value="<%= @target %>">
                    <span class="v2-login-form-button-name">Confirm</span>
                  </button>

                </div>
                <div class="web-hide">
                  <div class="v2-keep-me-login-container">
                  </div>
                  <center>
                    <button class="v2-login-form-button" name="target" type="submit" value="<%= @target %>">
                      <span class="v2-login-form-button-name">Confirm</span>
                    </button>
                  </center>
                </div>
                <div class="v2-login-form-register-container">
                  <span class="v2-login-form-register">Need an account? <a href="/register">Join Us</a></span>
                </div>
                <div class="v2-login-form-contact-info text-right mobile-hide">
                  Head Office: 0161 241 2441
                  <br>
                  Email: hello@flairpeople.com
                </div>
                <div style="clear:both"></div>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="content-after"></div>
  <%= render :partial => "v2/mobile/application/footer" %>
</div>
