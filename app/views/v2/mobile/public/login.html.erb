<%= content_for :head do %>
  <title>Log In to your Flair Account</title>
  <meta name="description" content="Casual flexible jobs should be rewarding for you and your bank account. Log in with Flair anytime, check out all up and coming events, select your shifts and keep on top of gaps in your schedules." />
<% end %>
<div class="public login">
  <%= render :partial => "v2/mobile/shared/nav" %>
  <div class="v2-login-background-layer-1"></div>
  <div class="v2-login-background-layer-2"></div>
  <div class="v2-login-background-layer-3"></div>
  <div class="v2-login-background-layer-4"></div>
  <div class="v2-login-background-mobile-image"></div>
  <div class="mobile-content" style="height: 530px;">
    <%= render :partial => 'login_form' %>
    <%= render :partial => 'v2/mobile/public/forgot_password' %>
  </div>
  <div class="content-after"></div>
  <%= render :partial => "v2/mobile/application/footer" %>
</div>
