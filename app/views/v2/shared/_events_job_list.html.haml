  - if @prospect
    -# main rate and holiday_rate
    - if @prospect.age >= 23
      #prospect_age{style: 'display: none;', age: '23'}
    - elsif @prospect.age >= 21
      #prospect_age{style: 'display: none;', age: '21'}
    - else
      #prospect_age{style: 'display: none;', age: '18'}
