              -# %span{style: "#{@prospect ? (@prospect.gigs.where(event_id: event.id).first || @prospect.gig_requests.where(event_id: event.id).first ? 'display: none;' : '') : ''}"}
              %span{id: "event-#{event.id}-tags"}
