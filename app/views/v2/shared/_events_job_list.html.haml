                          %label.normal-text{id: "rate-18-#{event.id}"}= pay_21 ? "18-20 years: Â£#{'%.2f' % (pay_21)}(Â£#{'%.2f' % (pay_21 - hp_21)} + Â£#{'%.2f' % (hp_21)}) " : ''
                        - else
