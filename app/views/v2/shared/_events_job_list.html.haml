                          %label.normal-text{id: "rate-21-#{event.id}"}= pay_21 ? "21-22 years: Â£#{'%.2f' % (pay_21)}(Â£#{'%.2f' % (pay_21 - hp_21)} + Â£#{'%.2f' % (hp_21)}) " : ''
