                        %h1.mt-10{id: "main-rate-#{event.id}"}= "Â£#{job ? '%.2f' % job.pay_25_and_over : nil}"

                      - rates = [pay_18, pay_21, pay_25].uniq
                      - if rates.count < 2
                        %label.normal-text.mt-15{id: "rate-23-#{event.id}"}= pay_25 ? "Â£#{'%.2f' % (pay_25)}(Â£#{'%.2f' % (pay_25 - hp_25)} + Â£#{'%.2f' % (hp_25)}) " : ''
                        %label.normal-text{id: "rate-21-#{event.id}", style: 'display: none'} 21-22 years: Â£10.09 (Â£9.00 + Â£1.09)
                        %label.normal-text{id: "rate-18-#{event.id}", style: 'display: none'} 18-20 years: Â£10.09 (Â£9.00 + Â£1.09)
