                    - if event.id == @show_event.to_i
                      %button.view-details.mb-5.less-details LESS DETAILS
                    - else
                      %button.view-details.mb-5 VIEW DETAILS
                  - else
                    %button.view-details.mb-5 VIEW DETAILS
