                          %label.normal-text{id: "rate-21-#{event.id}"}= pay_25 ? "21-22 years: Â£#{'%.2f' % (pay_25)}(Â£#{'%.2f' % (pay_25 - hp_25)} + Â£#{'%.2f' % (hp_25)}) " : ''
                          %label.normal-text{id: "rate-18-#{event.id}"}= pay_18 ? "18-20 years: Â£#{'%.2f' % (pay_18)}(Â£#{'%.2f' % (pay_18 - hp_18)} + Â£#{'%.2f' % (hp_18)}) " : ''
