            %a.command-view-id View ID
          %li
            %a.command-upload-id Upload ID
          %li.divider
          %li
            %a.command-upload-photo Upload Photo
          %li.divider
          %li
            %a.command-view-bar-license View Bar Licence
          %li
            %a.command-upload-bar-license Upload Bar Licence
